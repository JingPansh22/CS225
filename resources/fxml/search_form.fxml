<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="12"
      alignment="TOP_LEFT"
      style="-fx-padding: 20; -fx-background-color: transparent;">


    <Label text="Search By"
           style="-fx-font-size: 20px; -fx-text-fill: #68894A;; -fx-font-weight: bold;" />

    <Label text="Name"/>
    <TextField fx:id="nameField" promptText="Chemical Name"/>

    <Label text="CAS Number"/>
    <TextField fx:id="casField" promptText="CAS Registry Number"/>

    <Label text="Barcode"/>
    <TextField fx:id="barcodeField" promptText="Chemical Barcode"/>

    <Label text="Location"/>
    <TextField fx:id="locationField" promptText="Storage Room"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="search_form_Button" text="Search" />
        <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
        <Button text="Advanced Search" />
    </HBox>

</VBox>
